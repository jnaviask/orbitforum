{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    "baseUrl": "./client/scripts",
    "resolveJsonModule": true
  },
  "include": [
    "./client",
    "./client/scripts"
  ],
  "exclude": [
    "./node_modules"
  ]
}